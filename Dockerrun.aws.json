{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
          "name": "client",
          "image": "shazhu/multi-client",
          "hostname": "client",
          "essential": false,
          "memory": 128,
          "environment": [
            {
              "name": "Container",
              "value": "PHP"
            }
          ],
          "mountPoints": [
            {
              "sourceVolume": "php-app",
              "containerPath": "/var/www/html",
              "readOnly": true
            }
          ]
        },
        {
            "name": "server",
            "image": "shazhu/multi-server",
            "hostname": "api",
            "essential": false,
            "memory": 128,
            "environment": [
              {
                "name": "Container",
                "value": "PHP"
              }
            ],
            "mountPoints": [
              {
                "sourceVolume": "php-app",
                "containerPath": "/var/www/html",
                "readOnly": true
              }
            ]
          },
          {
            "name": "worker",
            "image": "shazhu/multi-worker",
            "hostname": "worker",
            "essential": false,
            "memory": 128,
            "environment": [
              {
                "name": "Container",
                "value": "PHP"
              }
            ],
            "mountPoints": [
              {
                "sourceVolume": "php-app",
                "containerPath": "/var/www/html",
                "readOnly": true
              }
            ]
          },
          {
            "name": "nginx",
            "image": "shazhu/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "memory": 128,
            "links": [ "client", "server" ],
            "portMappings": [
                {
                  "hostPort": 80,
                  "containerPort": 80
                }
            ],
            "environment": [
              {
                "name": "Container",
                "value": "PHP"
              }
            ],
            "mountPoints": [
              {
                "sourceVolume": "php-app",
                "containerPath": "/var/www/html",
                "readOnly": true
              }
            ]
          }
        ]
}